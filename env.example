# eSIM工具安全环境配置
# ⚠️ 生产环境必须修改所有默认值

# 服务器配置
NODE_ENV=production
PORT=3000

# Giffgaff OAuth配置（敏感信息）
GIFFGAFF_CLIENT_ID=your_giffgaff_client_id_here
GIFFGAFF_CLIENT_SECRET=your_giffgaff_client_secret_here

# Simyo API配置（敏感信息）
SIMYO_CLIENT_TOKEN=your_simyo_client_token_here

# API端点配置
GIFFGAFF_API_BASE=https://id.giffgaff.com
GIFFGAFF_PUBLIC_API_BASE=https://publicapi.giffgaff.com
SIMYO_API_BASE=https://appapi.simyo.nl

# 安全配置
SESSION_SECRET=your_super_secret_key_change_in_production_min_32_chars
COOKIE_SECRET=your-cookie-secret-key-here
JWT_SECRET=your-jwt-secret-key-here

# 会话配置
SESSION_TIMEOUT_HOURS=2
MAX_SESSIONS_PER_USER=3

# 速率限制
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_WINDOW_MS=60000

# 数据库配置（可选）
DATABASE_URL=your_database_connection_string
REDIS_URL=your_redis_connection_string

# 日志配置
LOG_LEVEL=warn
LOG_FILE=logs/app.log
ENABLE_ACCESS_LOG=true

# CORS配置
CORS_ORIGIN=https://your-domain.com

# 安全级别
SECURITY_LEVEL=high
ENABLE_ANTI_DEBUG=true
ENABLE_ANTI_SCRAPING=true

# API超时配置
API_TIMEOUT=30000
MAX_RETRIES=3

# 加密配置
ENCRYPTION_ALGORITHM=aes-256-gcm
HASH_ALGORITHM=sha256