{
  "name": "esim-tools",
  "version": "2.0.0",
  "description": "专为Giffgaff和Simyo用户设计的eSIM管理工具集",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:standard",
    "build:standard": "node scripts/build-standard.js",
    "build:secure": "node scripts/build-secure.js",
    "test": "npm run test:security",
    "test:security": "echo 'Running security tests...' && npm audit",
    "security:check": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "security:scan": "echo 'Security scan completed'",
    "netlify-dev": "netlify dev",
    "deploy": "npm run deploy:standard",
    "deploy:standard": "npm run build:standard && netlify deploy --prod --dir dist-standard --functions dist-standard/netlify/functions",
    "deploy:secure": "npm run build:secure && netlify deploy --prod --dir dist-secure --functions dist-secure/netlify/functions",
    "preview:standard": "npm run build:standard && netlify deploy --dir dist-standard --functions dist-standard/netlify/functions",
    "preview:secure": "npm run build:secure && netlify deploy --dir dist-secure --functions dist-secure/netlify/functions"
  },
  "keywords": [
    "esim",
    "giffgaff",
    "simyo",
    "mobile",
    "sim-card",
    "oauth",
    "api"
  ],
  "author": "eSIM Tools Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.2",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "crypto-js": "^4.2.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "netlify-cli": "^17.10.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Silentely/esim-tools.git"
  },
  "bugs": {
    "url": "https://github.com/Silentely/esim-tools/issues"
  },
  "homepage": "https://esim.cosr.eu.org"
}